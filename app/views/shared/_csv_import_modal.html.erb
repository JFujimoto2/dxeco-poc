<div class="modal fade" id="importModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag(import_path, multipart: true, data: { turbo: false }) do %>
        <div class="modal-header">
          <h5 class="modal-title"><%= title %> CSVインポート</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p class="text-muted small">CSVフォーマット: <%= csv_format %></p>
          <p class="mb-3">
            <%= link_to template_path, class: "text-decoration-none" do %>
              <i class="bi bi-download me-1"></i>テンプレートをダウンロード
            <% end %>
          </p>
          <div class="mb-3">
            <label class="form-label">CSVファイル</label>
            <%= file_field_tag :file, accept: ".csv", class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-upload me-1"></i>インポート
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
