<% content_for(:page_title) { "サーベイ作成" } %>

<h4 class="mb-4">サーベイ作成</h4>

<%= form_with model: @survey, class: "card" do |f| %>
  <div class="card-body">
    <% if @survey.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @survey.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :title, "タイトル", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "例: 2026年Q1 アカウント棚卸し" %>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :survey_type, "種別", class: "form-label" %>
        <%= f.select :survey_type, [["アカウント棚卸し", "account_review"], ["PW更新リマインダー", "password_update"]], {}, class: "form-select" %>
      </div>
      <div class="col-md-6">
        <%= f.label :deadline, "回答期限", class: "form-label" %>
        <% default_deadline = 2.weeks.from_now.to_date %>
        <div class="d-flex align-items-center gap-2">
          <%= f.date_field :deadline, class: "form-control", id: "deadline-input", value: default_deadline,
              onchange: "updateWeekday(this)" %>
          <span id="deadline-weekday" class="text-muted fw-bold"><%= weekday_label(default_deadline) %></span>
        </div>
      </div>
    </div>

    <hr>
    <h6>対象の絞り込み（任意）</h6>
    <p class="text-muted small">未選択の場合、全アクティブアカウントが対象になります。</p>

    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label">対象部門</label>
        <select name="survey[target_department]" class="form-select">
          <option value="">全部門</option>
          <% @departments.each do |dept| %>
            <option value="<%= dept %>"><%= dept %></option>
          <% end %>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label">対象SaaS</label>
        <select name="survey[target_saas_ids][]" class="form-select" multiple size="5">
          <% @saases.each do |saas| %>
            <option value="<%= saas.id %>"><%= saas.name %></option>
          <% end %>
        </select>
        <div class="form-text">Ctrl+クリックで複数選択</div>
      </div>
    </div>
  </div>

  <div class="card-footer">
    <%= f.submit "下書き保存", class: "btn btn-primary" %>
    <%= link_to "キャンセル", surveys_path, class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>

<script>
  function updateWeekday(input) {
    var weekdays = ["日", "月", "火", "水", "木", "金", "土"];
    var span = document.getElementById("deadline-weekday");
    if (input.value) {
      var d = new Date(input.value + "T00:00:00");
      span.textContent = "(" + weekdays[d.getDay()] + ")";
    } else {
      span.textContent = "";
    }
  }
</script>
