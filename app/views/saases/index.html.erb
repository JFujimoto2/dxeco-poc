<% content_for(:page_title) { "SaaS台帳" } %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h4>SaaS台帳</h4>
  <div>
    <%= link_to export_saases_path(q: params[:q], category: params[:category], status: params[:status], auth_method: params[:auth_method], data_location: params[:data_location], department: params[:department]), class: "btn btn-outline-success me-1" do %>
      <i class="bi bi-download me-1"></i>CSVエクスポート
    <% end %>
    <button class="btn btn-outline-secondary me-1" data-bs-toggle="modal" data-bs-target="#importModal">
      <i class="bi bi-upload me-1"></i>CSVインポート
    </button>
    <%= link_to new_saas_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>新規登録
    <% end %>
  </div>
</div>

<div class="card mb-4">
  <div class="card-body">
    <%= form_tag(saases_path, method: :get, class: "row g-3 align-items-end") do %>
      <div class="col-md-3">
        <label class="form-label">キーワード</label>
        <input type="text" name="q" value="<%= params[:q] %>" class="form-control" placeholder="SaaS名で検索">
      </div>
      <div class="col-md-2">
        <label class="form-label">カテゴリ</label>
        <select name="category" class="form-select">
          <option value="">すべて</option>
          <% @categories.each do |cat| %>
            <option value="<%= cat %>" <%= "selected" if params[:category] == cat %>><%= cat %></option>
          <% end %>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">ステータス</label>
        <select name="status" class="form-select">
          <option value="">すべて</option>
          <% Saas.statuses.each_key do |s| %>
            <option value="<%= s %>" <%= "selected" if params[:status] == s %>><%= s %></option>
          <% end %>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">認証方式</label>
        <select name="auth_method" class="form-select">
          <option value="">すべて</option>
          <% Saas.auth_methods.each_key do |m| %>
            <option value="<%= m %>" <%= "selected" if params[:auth_method] == m %>><%= m == "other_auth" ? "other" : m %></option>
          <% end %>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">部署</label>
        <select name="department" class="form-select">
          <option value="">すべて</option>
          <% @departments.each do |dept| %>
            <option value="<%= dept %>" <%= "selected" if params[:department] == dept %>><%= dept %></option>
          <% end %>
        </select>
      </div>
      <div class="col-md-1">
        <button type="submit" class="btn btn-outline-secondary w-100">
          <i class="bi bi-search"></i>
        </button>
      </div>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>SaaS名</th>
          <th>カテゴリ</th>
          <th>ステータス</th>
          <th>セキュリティ</th>
          <th>担当者</th>
          <th>アカウント数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @saases.each do |saas| %>
          <tr>
            <td><%= link_to saas.name, saas %></td>
            <td><span class="badge bg-secondary"><%= saas.category %></span></td>
            <td>
              <% badge_class = case saas.status
                               when "active" then "bg-success"
                               when "trial" then "bg-warning text-dark"
                               when "cancelled" then "bg-danger"
                               end %>
              <span class="badge <%= badge_class %>"><%= saas.status %></span>
            </td>
            <td>
              <% if saas.handles_personal_data? %>
                <span class="badge bg-danger" title="個人情報取扱い"><i class="bi bi-person-lock"></i> 個人情報</span>
              <% end %>
              <% if saas.auth_method.present? %>
                <% auth_badge = saas.sso? ? "bg-success" : "bg-warning text-dark" %>
                <span class="badge <%= auth_badge %>" title="認証方式"><%= saas.auth_method == "other_auth" ? "other" : saas.auth_method %></span>
              <% end %>
              <% if saas.overseas? %>
                <span class="badge bg-info" title="海外データ保存"><i class="bi bi-globe"></i> 海外</span>
              <% end %>
            </td>
            <td><%= saas.owner&.display_name || "-" %></td>
            <td><%= saas.saas_accounts.size %></td>
            <td class="text-end">
              <%= link_to edit_saas_path(saas), class: "btn btn-sm btn-outline-secondary" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="mt-3">
  <%= paginate @saases %>
</div>

<%= render "import_form" %>
