<% content_for(:page_title) { "メンバー" } %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h4>メンバー</h4>
</div>

<div class="card mb-4">
  <div class="card-body">
    <%= form_tag(users_path, method: :get, class: "row g-3 align-items-end") do %>
      <div class="col-md-5">
        <label class="form-label">キーワード</label>
        <input type="text" name="q" value="<%= params[:q] %>" class="form-control" placeholder="名前・メールで検索">
      </div>
      <div class="col-md-4">
        <label class="form-label">部門</label>
        <select name="department" class="form-select">
          <option value="">すべて</option>
          <% @departments.each do |dept| %>
            <option value="<%= dept %>" <%= "selected" if params[:department] == dept %>><%= dept %></option>
          <% end %>
        </select>
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-outline-secondary w-100">
          <i class="bi bi-search me-1"></i>検索
        </button>
      </div>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>名前</th>
          <th>メール</th>
          <th>部門</th>
          <th>役職</th>
          <th>ロール</th>
          <th>アカウント数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to (user.display_name || "-"), user %></td>
            <td><%= user.email %></td>
            <td><%= user.department || "-" %></td>
            <td><%= user.job_title || "-" %></td>
            <td><span class="badge bg-secondary"><%= user.role %></span></td>
            <td><%= user.saas_accounts.size %></td>
            <td class="text-end">
              <% if current_user.admin? %>
                <%= link_to edit_user_path(user), class: "btn btn-sm btn-outline-secondary" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="mt-3">
  <%= paginate @users %>
</div>
