<% content_for(:page_title) { "#{@user.display_name} の編集" } %>

<h4 class="mb-4"><%= @user.display_name || @user.email %> の編集</h4>

<%= form_with(model: @user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :display_name, "表示名", class: "form-label" %>
          <%= f.text_field :display_name, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :role, "ロール", class: "form-label" %>
          <%= f.select :role, User.roles.keys.map { |r| [r, r] }, {}, class: "form-select" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :department, "部門", class: "form-label" %>
          <%= f.text_field :department, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :job_title, "役職", class: "form-label" %>
          <%= f.text_field :job_title, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "更新", class: "btn btn-primary" %>
    <%= link_to "キャンセル", user_path(@user), class: "btn btn-outline-secondary" %>
  </div>
<% end %>
