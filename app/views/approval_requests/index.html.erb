<% content_for(:page_title) { "申請・承認" } %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h4>申請・承認</h4>
  <%= link_to "新規申請", new_approval_request_path, class: "btn btn-primary" %>
</div>

<% if @pending_requests.any? %>
  <div class="card mb-4 border-warning">
    <div class="card-header bg-warning bg-opacity-10">
      <h6 class="mb-0"><i class="bi bi-clock me-1"></i>承認待ち（<%= @pending_requests.size %>件）</h6>
    </div>
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>申請日</th>
            <th>種別</th>
            <th>対象SaaS</th>
            <th>申請者</th>
            <th>理由</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @pending_requests.each do |req| %>
            <tr>
              <td><%= req.created_at.strftime("%Y/%m/%d") %></td>
              <td>
                <% case req.request_type %>
                <% when "new_saas" %>
                  <span class="badge bg-primary">新規SaaS</span>
                <% when "add_account" %>
                  <span class="badge bg-info">アカウント追加</span>
                <% when "remove_account" %>
                  <span class="badge bg-secondary">アカウント削除</span>
                <% end %>
              </td>
              <td><%= req.target_saas_name %></td>
              <td><%= req.requester.display_name %></td>
              <td class="small"><%= truncate(req.reason, length: 40) %></td>
              <td><%= link_to "詳細", approval_request_path(req), class: "btn btn-sm btn-outline-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<div class="card">
  <div class="card-header">
    <h6 class="mb-0">申請履歴</h6>
  </div>
  <div class="card-body p-0">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>申請日</th>
          <th>種別</th>
          <th>対象SaaS</th>
          <th>申請者</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @all_requests.each do |req| %>
          <tr>
            <td><%= req.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <% case req.request_type %>
              <% when "new_saas" %>
                <span class="badge bg-primary">新規SaaS</span>
              <% when "add_account" %>
                <span class="badge bg-info">アカウント追加</span>
              <% when "remove_account" %>
                <span class="badge bg-secondary">アカウント削除</span>
              <% end %>
            </td>
            <td><%= req.target_saas_name %></td>
            <td><%= req.requester.display_name %></td>
            <td>
              <% case req.status %>
              <% when "pending" %>
                <span class="badge bg-warning text-dark">承認待ち</span>
              <% when "approved" %>
                <span class="badge bg-success">承認</span>
              <% when "rejected" %>
                <span class="badge bg-danger">却下</span>
              <% end %>
            </td>
            <td><%= link_to "詳細", approval_request_path(req), class: "btn btn-sm btn-outline-secondary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate @all_requests %>
