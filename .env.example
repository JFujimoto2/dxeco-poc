# Entra ID SSO (設定するとSSO有効、未設定なら開発用ログイン)
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
ENTRA_TENANT_ID=
APP_URL=http://localhost:3000
# Entra ID同期対象グループID (未設定の場合は全ユーザーを同期)
ENTRA_SYNC_GROUP_ID=

# Teams 通知 (未設定の場合は通知がスキップされる)
TEAMS_WEBHOOK_URL=
# サーベイ専用チャネル (未設定の場合は TEAMS_WEBHOOK_URL にフォールバック)
TEAMS_WEBHOOK_SURVEY_URL=
# エラー通知専用チャネル (未設定の場合は TEAMS_WEBHOOK_URL にフォールバック)
TEAMS_WEBHOOK_ERROR_URL=

# メール通知 (SMTP未設定の場合はメール送信がスキップされる)
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DOMAIN=
MAILER_FROM=noreply@example.com

# PostgreSQL (WSL環境でポートが異なる場合)
# PGPORT=5433
